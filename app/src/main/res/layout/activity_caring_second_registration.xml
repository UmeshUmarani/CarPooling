<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_marginBottom="136dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Caring!!"
        android:layout_gravity="center"
        android:layout_alignParentTop="true"
        android:id="@+id/heading"
        android:layout_marginTop="50dip"
        android:layout_marginBottom="30dip"
        android:layout_centerHorizontal="true"
        android:textColor="#000000"/>

    <TextView
        android:layout_width="125dp"
        android:layout_height="40dp"
        android:text="Place"
        android:id="@+id/place"
        android:textColor="#000000"
        android:layout_below="@+id/heading"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="50dp"
        android:layout_marginBottom="40dp"
        android:layout_marginTop="40dp"
        android:textStyle="bold"
        android:textSize="15dp"/>

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:entries="@array/select_place_array"
        android:layout_alignBaseline="@+id/place"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:prompt="@string/selectPlace"
        ></Spinner>

    <TextView
        android:layout_width="125dp"
        android:layout_height="40dp"
        android:text="Date"
        android:id="@+id/date"
        android:textColor="#000000"
        android:layout_below="@+id/place"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="50dp"
        android:layout_marginBottom="40dp"
        android:textStyle="bold"
        android:textSize="15dp"/>

    <DatePicker
        android:id="@+id/datePicker1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >
    </DatePicker>

    <TextView
        android:layout_width="125dp"
        android:layout_height="40dp"
        android:text="Vacancy"
        android:id="@+id/textView6"
        android:textColor="#000000"
        android:layout_below="@+id/textView5"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="50dp"
        android:layout_marginBottom="40dp"
        android:textStyle="bold"
        android:textSize="15dp"/>

    <NumberPicker
        android:id="@+id/numberPicker1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleX="0.8"
        android:scaleY="0.8"
        android:layout_below="@+id/place"
        android:layout_toRightOf="@+id/heading"
        android:layout_toEndOf="@+id/heading" />


</RelativeLayout>
