<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="daimler.com.carpooling" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainScreenActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SignUpActivity"
            android:label="@string/title_activity_sign_up" >
        </activity>
        <activity
            android:name=".SelectChoiceActivity"
            android:label="@string/title_activity_select_choice" >
        </activity>
        <activity
            android:name=".CaringFirstRegistrationActivity"
            android:label="@string/title_activity_caring_first_registration" >
        </activity>
        <activity
            android:name=".CaringSecondRegistrationActivity"
            android:label="@string/title_activity_caring_second_registration" >
        </activity>
        <activity
            android:name=".SharingRegistrationActivity"
            android:label="@string/title_activity_sharing_registration" >
        </activity>
        <activity
            android:name=".CaringListActivity"
            android:label="@string/title_activity_caring_list" >
        </activity>
    </application>

</manifest>
